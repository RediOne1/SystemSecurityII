<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="pl.appsprojekt.systemsecurityii.ui.activity.MainActivity">

	<LinearLayout
		style="?android:attr/buttonBarStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/prover_btn"
			style="?android:attr/buttonBarStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/prover"/>

		<Button
			android:id="@+id/verifier_btn"
			style="?android:attr/buttonBarStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/verifier"/>
	</LinearLayout>

	<Button
		android:id="@+id/generate_world_btn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/generate_world"
		android:visibility="gone"
		tools:visibility="visible"/>

	<Button
		android:id="@+id/get_public_keys"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="get public keys"
		android:visibility="gone"
		tools:visibility="visible"/>

	<Button
		android:id="@+id/get_signature"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="get signature"
		android:visibility="gone"
		tools:visibility="visible"/>

	<Button
		android:id="@+id/set_world"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/set_world"
		android:visibility="gone"
		tools:visibility="visible"/>

	<Button
		android:id="@+id/set_public_keys"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Set public keys"
		android:visibility="gone"
		tools:visibility="visible"/>

	<Button
		android:id="@+id/set_sign"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Set signer params"
		android:visibility="gone"
		tools:visibility="visible"/>

	<Button
		android:id="@+id/verify"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/verify"
		android:visibility="gone"
		tools:visibility="visible"/>
</LinearLayout>
